<odoo>
  <data>
    <!-- explicit list view definition -->
    
    <record model="ir.ui.view" id="surfcompany.list">
      <field name="name">surfcompany list</field>
      <field name="model">surfcompany.surfcompany</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="value"/>
          <field name="value2"/>
        </tree>
      </field>
    </record>
    

    <!-- actions opening views on models -->
    
    <record model="ir.actions.act_window" id="surfcompany.action_window">
      <field name="name">surfcompany window</field>
      <field name="res_model">surfcompany.surfcompany</field>
      <field name="view_mode">tree,form</field>
    </record>
    

    <!-- server action to the one above -->
    
    <record model="ir.actions.server" id="surfcompany.action_server">
      <field name="name">surfcompany server</field>
      <field name="model_id" ref="model_surfcompany_surfcompany"/>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": self._name,
        }
      </field>
    </record>
    

    <!-- Top menu item -->
    
    <menuitem name="surfcompany" id="surfcompany.menu_root"/>
   
    <!-- menu categories -->
    
    <menuitem name="Menu 1" id="surfcompany.menu_1" parent="surfcompany.menu_root"/>
    <menuitem name="Menu 2" id="surfcompany.menu_2" parent="surfcompany.menu_root"/>
    
    <!-- actions -->
    
    <menuitem name="List" id="surfcompany.menu_1_list" parent="surfcompany.menu_1"
              action="surfcompany.action_window"/>
    <menuitem name="Server to list" id="surfcompany" parent="surfcompany.menu_2"
              action="surfcompany.action_server"/>
    
  </data>
</odoo>